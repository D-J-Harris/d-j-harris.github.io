.notfound {
  &-line {
    border-top: 0.4rem solid $default-shade;
  }
}

html,
body {
  color: $default-color;
}

html {
  font-family: $serif-primary;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  color: $default-shade;
  font-family: $sans-serif;
}

a {
  color: $blue;
}

blockquote {
  border-left: 0.25rem solid $grey-2;
  color: $grey-1;
}

.catalogue {
  &-item {
    border-bottom: 1px solid $grey-2;
    color: $default-color;
  }

  &-pinned {
    color: $default-tint;
  }

  &-time {
    color: $default-tint;
  }

  &-title {
    color: $default-shade;
  }

  &-line {
    border-top: 0.2rem solid $default-shade;
  }
}

.highlight {
  background-color: $grey-3;

  .lineno {
    color: $default-tint;
  }
}

.nav {
  box-shadow: 0 2px 2px -2px $shadow-color;

  &-title {
    color: $default-color;
  }

  li {
    color: $default-color;

    a {
      color: $default-color;
    }
  }

  footer {
    font-family: $serif-secondary;

    span {
      color: $default-color;
    }
  }

  .pagination {
    font-family: $serif-secondary;

    .top {
      color: $default-color;
    }

    .arrow {
      color: $default-color;
    }
  }

  .post {
    &-info {
      color: $default-tint;
    }

    &-title {
      color: $default-shade;
    }

    &-line {
      border-top: 0.4rem solid $default-shade;
    }

    img + em {
      color: $default-tint;
    }
  }

  .tags {
    &-header {
      &-title {
        color: $default-shade;
      }

      &-line {
        border-top: 0.4rem solid $default-shade;
      }
    }

    &-clouds {
      a {
        background: rgba(0, 0, 0, 0.05);
        color: $default-color;

        &:hover,
        &:active {
          background: rgba(0, 0, 0, 0.1);
        }
      }
    }

    &-item {
      &-label {
        a {
          color: $default-color;
        }
      }
    }

    &-post {
      &-title {
        color: $default-color;
      }

      &-line {
        border-top: 0.1rem solid $default-shade;
      }

      &-meta {
        color: $default-tint;
      }

      .tags-post-meta {
        color: $default-shade;
      }
    }
  }
}
